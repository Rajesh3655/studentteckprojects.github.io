---
import BaseLayout from "../../layouts/BaseLayout.astro";
import OpportunityCard from "../../components/OpportunityCard.astro";
import { loadCategory } from "../../lib/opportunities";

const items = loadCategory("jobs");
---
<BaseLayout
  title="Jobs - StudentTechProjects"
  description="Latest job opportunities for students and freshers."
  canonicalPath="/jobs/"
>
  <h1>Jobs</h1>
  <p>{items.length} jobs available.</p>
  <div class="grid">
    {items.map((item) => <OpportunityCard item={item} category="jobs" />)}
  </div>
</BaseLayout>

