---
interface Props {
  title: string;
  description: string;
  canonicalPath?: string;
}

const { title, description, canonicalPath = "/" } = Astro.props;
const site = "https://studenttechprojects.com";
const canonical = `${site}${canonicalPath}`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#1d4ed8" />
    <meta name="robots" content="index,follow,max-image-preview:large" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <slot name="head" />
    <style>
      body { font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; margin: 0; color: #1f2937; background: #f8fafc; }
      .container { max-width: 1100px; margin: 0 auto; padding: 0 16px; }
      header { background: #fff; border-bottom: 1px solid #e5e7eb; position: sticky; top: 0; z-index: 10; }
      nav { display: flex; justify-content: space-between; align-items: center; height: 64px; }
      .logo { font-weight: 800; font-size: 28px; color: #2563eb; text-decoration: none; }
      .logo span { color: #111827; }
      .links { display: flex; gap: 20px; flex-wrap: wrap; }
      .links a { text-decoration: none; color: #374151; font-weight: 600; }
      .links a:hover { color: #1d4ed8; }
      main { padding: 28px 0 64px; }
      footer { background: #111827; color: #e5e7eb; padding: 36px 0; margin-top: 48px; }
      .grid { display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 16px; }
      .card { background: #fff; border: 1px solid #e5e7eb; border-radius: 12px; padding: 16px; box-shadow: 0 2px 10px rgba(15, 23, 42, 0.04); }
      .section-head { display: flex; justify-content: space-between; align-items: center; gap: 12px; margin: 24px 0 12px; }
      .section-head h2 { margin: 0; }
      .count-grid { display: grid; grid-template-columns: repeat(4, minmax(0, 1fr)); gap: 16px; }
      .count-card h3 { margin: 0; font-size: 28px; color: #1d4ed8; }
      .count-card p { margin: 6px 0 0; color: #475569; }
      .btn { display: inline-block; background: #1d4ed8; color: #fff; text-decoration: none; padding: 9px 14px; border-radius: 10px; font-weight: 700; font-size: 14px; }
      .btn.secondary { background: #e2e8f0; color: #0f172a; }
      .link { color: #1d4ed8; font-weight: 700; text-decoration: none; }
      .link:hover { text-decoration: underline; }
      .opportunity-card h3 { margin: 0; font-size: 24px; line-height: 1.25; }
      .opportunity-card h3 a { color: #0f172a; text-decoration: none; }
      .opportunity-card h3 a:hover { color: #1d4ed8; }
      .muted { color: #64748b; margin: 8px 0; }
      .company { font-weight: 700; color: #334155; }
      .experience { display: inline-block; background: #eff6ff; color: #1e40af; border: 1px solid #bfdbfe; border-radius: 999px; padding: 3px 10px; font-size: 13px; margin: 4px 0 10px; }
      .card-head { display: flex; justify-content: space-between; gap: 10px; align-items: start; }
      .badge-new { background: #dcfce7; color: #166534; border: 1px solid #86efac; border-radius: 999px; font-size: 11px; font-weight: 800; padding: 4px 8px; white-space: nowrap; }
      .actions { display: flex; align-items: center; gap: 12px; margin-top: 14px; flex-wrap: wrap; }
      .stack { display: grid; gap: 14px; }
      .breadcrumbs { color: #64748b; margin-bottom: 14px; font-size: 14px; }
      .breadcrumbs a { color: #1d4ed8; text-decoration: none; }
      .detail h2 { margin-top: 28px; }
      .detail ul { margin: 10px 0 0 0; padding-left: 18px; }
      .detail li { margin-bottom: 8px; }
      .detail table { width: 100%; border-collapse: collapse; margin-top: 10px; background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; overflow: hidden; }
      .detail th, .detail td { border-bottom: 1px solid #e5e7eb; padding: 10px; text-align: left; }
      .detail th { background: #f8fafc; }
      .softsite { border: 1px solid #dbeafe; border-radius: 12px; background: #f0f9ff; padding: 14px; margin-top: 24px; }
      .softsite img { max-height: 50px; width: auto; display: block; margin-bottom: 8px; }
      h1 { margin: 0 0 8px; font-size: 38px; line-height: 1.2; color: #0f172a; }
      h2 { margin: 0 0 10px; font-size: 26px; color: #0f172a; }
      p { line-height: 1.7; }
      @media (max-width: 900px) { .grid { grid-template-columns: 1fr 1fr; } .count-grid { grid-template-columns: 1fr 1fr; } .links { display: none; } }
      @media (max-width: 640px) { .grid { grid-template-columns: 1fr; } h1 { font-size: 30px; } }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <a href="/" class="logo">Student<span>TechProjects</span></a>
          <div class="links">
            <a href="/jobs/">Jobs</a>
            <a href="/opportunities/">Opportunities</a>
            <a href="/projects/">Projects</a>
            <a href="/internships/">Internships</a>
            <a href="/hackathons/">Hackathons</a>
          </div>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer>
      <div class="container">
        <p>Â© 2026 StudentTechProjects</p>
      </div>
    </footer>
  </body>
</html>
